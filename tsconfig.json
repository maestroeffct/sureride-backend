{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "types": ["node"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/prisma"],
  "exclude": ["node_modules", "dist", "src/prisma"]
}
